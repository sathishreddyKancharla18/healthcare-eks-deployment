resource "aws_iam_policy" "eks_autoscaling" {
  name        = "${var.environment}-eks-autoscaling-policy"
  description = "Policy for EKS cluster autoscaling"

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "autoscaling:DescribeAutoScalingGroups",
          "autoscaling:DescribeAutoScalingInstances",
          "autoscaling:DescribeLaunchConfigurations",
          "autoscaling:DescribeTags",
          "autoscaling:SetDesiredCapacity",
          "autoscaling:TerminateInstanceInAutoScalingGroup",
          "ec2:DescribeLaunchTemplateVersions"
        ]
        Resource = "*"
      }
    ]
  })
}

resource "aws_iam_role_policy_attachment" "eks_autoscaling" {
  role       = aws_iam_role.eks_nodes.name
  policy_arn = aws_iam_policy.eks_autoscaling.arn
}